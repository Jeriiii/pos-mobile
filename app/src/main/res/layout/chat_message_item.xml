<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messageItemLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/Placeholder_conversation_name"
        android:id="@+id/messageSender"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="10dp"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/Placeholder_chat_message_text"
        android:id="@+id/messageText"
        android:layout_below="@+id/messageSender"
        android:layout_alignLeft="@+id/messageSender"
        android:layout_alignStart="@+id/messageSender"
        android:paddingTop="2dp"
        android:paddingBottom="5dp"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/Placeholder_chat_last_active"
        android:id="@+id/chatLastActive"
        android:layout_alignTop="@+id/messageSender"
        android:layout_toRightOf="@+id/messageSender"
        android:layout_toEndOf="@+id/messageSender"
        android:paddingLeft="15dp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/Placeholder_chat_sended_time"
        android:id="@+id/chatMessageTime"
        android:layout_alignTop="@+id/chatLastActive"
        android:layout_alignRight="@+id/messageText"
        android:layout_alignEnd="@+id/messageText"
        android:paddingLeft="5dp"
        android:paddingRight="10dp" />
</RelativeLayout>